@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>My Bank</h1>
    <p class="lead">My Bank is an online bank with a web based ATM</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg"> Powered by ASP.NET MVC</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Register</h2>
        <p>
            Register and create an account
        </p>
        <p>@Html.ActionLink("Register","Register","Account", null,new {@class="btn btn-default"})</p>
    </div>
    <div class="col-md-4">
        <h2>Login</h2>
        <p>Sign in to your account</p>
        <p>@Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-default" })</p>
    </div>
    
</div>

